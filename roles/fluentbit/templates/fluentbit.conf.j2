[SERVICE]
    Flush         5
    Log_Level     info
    Parsers_File  parsers.conf

[INPUT]
    Name          systemd
    Tag           host.*
    Systemd_Filter _SYSTEMD_UNIT=ssh.service

[OUTPUT]
    Name          es
    Match         *
    Host          {{ elasticsearch_host }}
    Index         {{ elasticsearch_index }}
    Type          _doc

